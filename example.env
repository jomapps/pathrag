# PathRAG with ArangoDB - Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# ARANGODB CONFIGURATION
# =============================================================================

# ArangoDB Server Configuration
ARANGODB_HOST=movie.ft.tc
ARANGODB_PORT=8529
ARANGODB_USERNAME=root
ARANGODB_PASSWORD=your_arangodb_password_here
ARANGODB_DATABASE=pathrag

# ArangoDB Connection Settings
ARANGODB_TIMEOUT=30
ARANGODB_MAX_RETRIES=3

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# =============================================================================
# PATHRAG CONFIGURATION
# =============================================================================

# PathRAG Core Settings
PATHRAG_WORKING_DIR=./pathrag_data
PATHRAG_NAMESPACE=default
PATHRAG_LOG_LEVEL=INFO

# PathRAG Processing Settings
PATHRAG_CHUNK_TOKEN_SIZE=1200
PATHRAG_CHUNK_OVERLAP_TOKEN_SIZE=100
PATHRAG_ENTITY_EXTRACT_MAX_GLEANING=1
PATHRAG_ENTITY_SUMMARY_TO_MAX_TOKENS=500
PATHRAG_EMBEDDING_BATCH_NUM=32
PATHRAG_EMBEDDING_FUNC_MAX_ASYNC=16
PATHRAG_LLM_MODEL_MAX_ASYNC=16

# PathRAG Query Settings
PATHRAG_DEFAULT_TOP_K=40
PATHRAG_MAX_TOKEN_FOR_TEXT_UNIT=4000
PATHRAG_MAX_TOKEN_FOR_GLOBAL_CONTEXT=3000
PATHRAG_MAX_TOKEN_FOR_LOCAL_CONTEXT=5000

# PathRAG Cache Settings
PATHRAG_ENABLE_LLM_CACHE=true
PATHRAG_ENABLE_EMBEDDING_CACHE=true

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================

# Flask API Server Settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false
FLASK_SECRET_KEY=your_secret_key_here

# API Security Settings
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=3600
API_ENABLE_CORS=true
API_CORS_ORIGINS=*

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployment Environment
DEPLOYMENT_ENV=production
DEPLOYMENT_USER=pathrag
DEPLOYMENT_HOME=/home/pathrag/pathrag

# Service Configuration
SERVICE_NAME=pathrag
SERVICE_DESCRIPTION=PathRAG API Service with ArangoDB
SERVICE_RESTART_POLICY=always
SERVICE_RESTART_DELAY=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/pathrag.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Metrics Settings
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=7
BACKUP_DIRECTORY=./backups

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Settings (only for development environment)
DEV_AUTO_RELOAD=true
DEV_DEBUG_MODE=false
DEV_PROFILING=false
DEV_MOCK_OPENAI=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security Settings
SECURITY_ENABLE_HTTPS=false
SECURITY_SSL_CERT_PATH=
SECURITY_SSL_KEY_PATH=
SECURITY_ENABLE_AUTH=false
SECURITY_JWT_SECRET=your_jwt_secret_here
SECURITY_JWT_EXPIRY=3600

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Performance Settings
PERF_WORKER_PROCESSES=4
PERF_WORKER_THREADS=2
PERF_MAX_CONNECTIONS=1000
PERF_CONNECTION_TIMEOUT=30
PERF_REQUEST_TIMEOUT=300

# Memory Settings
MEMORY_LIMIT=2GB
MEMORY_SWAP_LIMIT=4GB

# =============================================================================
# EXAMPLE VALUES FOR TESTING
# =============================================================================

